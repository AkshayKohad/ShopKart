<%layout("layouts/boilerplate")%> 
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <h1>New Product</h1>
        <form action="/" method="POST" data-toggle="validator">
            <div class="form-group">
                <label for="title" >Title</label>
                <input type="text" id="title" name="product[title]" class="form-control" required>
            </div>

            <div class="form-group">
                <label for="price">Price</label>
                <input type="text" id="price" name="product[price]" class="form-control" required>
            </div>
            
            <div class="form-group">
                <label for="image">ImagePath</label>
                <input type="text" id="image" name="product[imagePath]" class="form-control" required>
            </div>

            <div class="form-group">
                <label for="description">Description</label>
                <input type="text" id="description" name="product[description]" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary">Add Product</button>
           
        </form>
        <br><a href="/">Back to home page</a>
    </div>
</div>
